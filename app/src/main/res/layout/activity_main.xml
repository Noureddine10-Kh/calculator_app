<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/gray"
    android:layout_gravity="fill"
    android:layout_margin="0pt"
    android:layout_weight="1"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="20"
        android:background="@color/gray"
        android:id="@+id/showOldNum"
        android:text=""
        android:paddingTop="12dp"
        android:paddingStart="8dp"
        android:gravity="left|top"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_height="94dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="9"
        android:paddingEnd="4dp"
        android:background="@color/gray"
        android:id="@+id/ShowNumber"
        android:text="0"
        android:gravity="right|bottom"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@id/showOldNum"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <androidx.appcompat.widget.AppCompatButton
                android:text="Tan"
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/tanBut"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="numberClicked"
                android:layout_marginRight="1pt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="Cot"
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/cotBut"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:textSize="18sp"
                android:onClick="numberClicked"
                android:layout_marginRight="1pt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="NEG"
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/negBut"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="numberClicked"
                android:layout_marginRight="1pt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="Sec"
                android:background="@color/buop"
                android:textColor="@color/white"
                android:layout_height="18pt"
                android:id="@+id/SecBut"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:onClick="numberClicked"
                android:textSize="18sp"
                tools:ignore="OnClick" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <androidx.appcompat.widget.AppCompatButton
                android:text="Log"
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/LogBut"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="numberClicked"
                android:layout_marginRight="1pt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="x√y"
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/XRootY"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:textSize="18sp"

                android:layout_marginRight="1pt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="√x"
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/root"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="18sp"

                android:layout_marginRight="1pt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="x!"
                android:background="@color/buop"
                android:textColor="@color/white"
                android:layout_height="18pt"
                android:id="@+id/factBut"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:onClick="numberClicked"
                android:textSize="18sp"
                tools:ignore="OnClick" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pi"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="PI"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/doublePi"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="2PI"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buCos"
                android:onClick="numberClicked"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="Cos"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buSin"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="numberClicked"
                android:text="Sin"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/XpowY"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buOperation"
                android:text="x^y"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inverseX"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="1/x"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Xpow2"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="x^2"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/XPow3"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="numberClicked"
                android:text="x^3"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buClean"
                android:text="AC"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buPlusMinus"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="+/-"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buPer"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buDiv"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOperation"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="7"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="8"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="9"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buMul"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOperation"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="4"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="5"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="6"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buSub"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOperation"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="1"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="2"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu3"
                android:layout_width="74dp"
                android:layout_height="18pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numberClicked"
                android:text="3"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buSum"
                android:layout_width="72dp"
                android:layout_height="18pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOperation"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <androidx.appcompat.widget.AppCompatButton
                android:text="⌫"
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/deleteBut"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="numberClicked"
                android:layout_marginRight="1pt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="0"
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/bu0"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:textSize="18sp"
                android:onClick="numberClicked"
                android:layout_marginRight="1pt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="."
                android:background="@color/whiteback"
                android:layout_height="18pt"
                android:id="@+id/buDot"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="numberClicked"
                android:layout_marginRight="1pt"
                tools:ignore="DuplicateIds" />
            <androidx.appcompat.widget.AppCompatButton
                android:text="="
                android:background="@color/buop"
                android:textColor="@color/white"
                android:layout_height="18pt"
                android:id="@+id/buEq"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:textSize="18sp"
         />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>